<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvUserProfilePicture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:placeholderImage="@drawable/gray_oval"
        fresco:roundAsCircle="true"
        fresco:actualImageScaleType="fitCenter"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_toRightOf="@+id/sdvUserProfilePicture"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSearchUserName"
            android:fontFamily="san-serif-medium"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSearchFullName"
            android:fontFamily="san-serif"
            android:textSize="14sp"
            android:textColor="@color/light_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>